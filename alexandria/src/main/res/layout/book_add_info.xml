<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true"
        >

        <TextView
            android:id="@+id/add_book_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Subtitle"
            android:layout_columnSpan="2"

            />

        <!-- TODO change wid/heig-->
        <ImageView
            android:id="@+id/add_book_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center_horizontal"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/add_book_authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Author1\nAuthor2\nBigNamedAuthor"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/add_book_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Science Fiction Horror"
            android:layout_columnSpan="2"
            />
        <TextView
            android:id="@+id/add_book_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="ISBN: 9875648976213"
            android:layout_columnSpan="2"
            />
    </GridLayout>

</LinearLayout>